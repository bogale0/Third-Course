<Page x:Class="Course.Authorization" Background="CornflowerBlue" FontSize="14"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="header" Content="Авторизация" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,40"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,40">
                <Label Content="Логин" Margin="0,0,10,0"/>
                <TextBox x:Name="login" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,80">
                <Label Content="Пароль" Margin="0,0,10,0"/>
                <PasswordBox x:Name="password" Width="150"/>
            </StackPanel>
            <Button x:Name="enterButton" HorizontalAlignment="Center" Content="Войти" Margin="0,0,0,20" Click="Enter"/>
            <Button x:Name="switchButton" HorizontalAlignment="Center" Content="Регистрация" Click="SwitchRegAuth"/>
        </StackPanel>
    </Grid>
</Page>

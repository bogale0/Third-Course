<Page x:Class="Course.UsersList" Background="CornflowerBlue" FontSize="14"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersList">

    <Grid>
        <Label Content="Список пользователей" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <DataGrid x:Name="table" Width="300" AutoGenerateColumns="False" CanUserAddRows="False" HorizontalAlignment="Center" Margin="0,50,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Width="150" Binding="{Binding login}"/>
                <DataGridComboBoxColumn Header="Привелегии" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Margin="609,0,55,0" VerticalAlignment="Center">
            <Button Content="Сохранить" Click="SaveChanges"/>
            <Button Content="Назад" Margin="0,40,0,0" Click="GoBack"/>
        </StackPanel>
    </Grid>
</Page>

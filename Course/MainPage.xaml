<Page x:Class="Course.MainPage" Background="CornflowerBlue" FontSize="14"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <DataGrid x:Name="table" Width="450" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10,50,340,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Аудитория" Width="100" Binding="{Binding room}"/>
                <DataGridTextColumn Header="Состояние" Width="100" Binding="{Binding state}"/>
                <DataGridTextColumn Header="Группа" Width="75" Binding="{Binding groupName}"/>
                <DataGridTextColumn Header="Преподаватель" Width="150" Binding="{Binding teacher}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Margin="570,0,94,0" VerticalAlignment="Center">
            <Label Content="Дата" FontWeight="Bold"/>
            <DatePicker x:Name="dateChosen" SelectedDateChanged="DateAndClassChosen"/>
            <Label Content="Номер пары" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox x:Name="classChosen" SelectionChanged="DateAndClassChosen">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
            <Button Content="Сохранить" Margin="0,20,0,0" Click="SaveChanges"/>
            <Button Content="Выйти" Margin="0,40,0,0" Click="ExitAuth"/>
        </StackPanel>

        <Menu Margin="0,0,0,356">
            <MenuItem Header="Аудитории" Click="OpenRoomsList"/>
            <MenuItem Header="Расписание" Click="OpenSchedule"/>
            <MenuItem Header="Пользователи" Click="OpenUserList"/>
            <MenuItem Header="Экспорт"/>
        </Menu>
    </Grid>
</Page>

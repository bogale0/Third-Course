<Page x:Class="Course.MainPage" Background="CornflowerBlue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <DataGrid x:Name="table" Width="450" AutoGenerateColumns="False" Margin="10,50,340,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Аудитория" Width="100" Binding="{Binding room}"/>
                <DataGridTextColumn Header="Состояние" Width="100" Binding="{Binding state}"/>
                <DataGridTextColumn Header="Группа" Width="75" Binding="{Binding group}"/>
                <DataGridTextColumn Header="Преподаватель" Width="150" Binding="{Binding teacher}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Margin="567,75,97,33">
            <Label Content="Дата" FontWeight="Bold" FontSize="14"/>
            <!--<ComboBox x:Name="DayComboBox" SelectedIndex="0" SelectionChanged="DayChanged" FontSize="14">
                <ComboBoxItem Content="Понедельник"/>
                <ComboBoxItem Content="Вторник"/>
                <ComboBoxItem Content="Среда"/>
                <ComboBoxItem Content="Четверг"/>
                <ComboBoxItem Content="Пятница"/>
                <ComboBoxItem Content="Суббота"/>
            </ComboBox>-->
            <TextBox x:Name="dateChosen"/>
            <Label Content="Номер пары:" FontWeight="Bold" Margin="0,10,0,0" FontSize="14"/>
            <ComboBox x:Name="classChosen" FontSize="14">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
            <Button Content="Выбрать" Margin="0,20,0,0" Click="DayAndClassChosen"/>
            <Button Content="Сохранить" Margin="0,20,0,0" Click="SaveChanges"/>
            <Button Content="Выйти" Margin="0,40,0,0" Click="ExitAuth"/>
        </StackPanel>
        
        <Menu Margin="0,0,411,356">
            <MenuItem Header="Аудитории" Click="OpenRoomsList"/>
            <MenuItem Header="Расписание"/>
            <MenuItem Header="Экспорт"/>
        </Menu>
    </Grid>
</Page>
